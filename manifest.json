{
  "manifest_version": 3,
  "name": "Of Stats Editor",
  "version": "1.0.0",
  "description": "Professional statistics editor for OnlyFans creators. Edit earnings, subscriptions, fans count and charts in real-time.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "sidePanel"
  ],
  "host_permissions": [
    "https://onlyfans.com/*",
    "https://stats-editor-production.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["chart.min.js", "chart-drawer.js", "page-interceptor.js"],
      "matches": ["https://onlyfans.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://onlyfans.com/*"],
      "js": ["inject-early.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://onlyfans.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
